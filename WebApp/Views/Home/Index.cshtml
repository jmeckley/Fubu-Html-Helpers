@using FubuHtmlHelpers;
@using WebApp.Controllers

@model WebApp.Models.LoginViewModel

@{
    ViewBag.Title = "Home Page";
}

@using(Html.BeginForm())
{
    @Html.ValidationSummaryBlock()
    @Html.Input(m => m.Code)
    @Html.FormBlock(m => m.Email)
    @Html.FormBlock(m => m.Password)
    @Html.FormBlock(m => m.ConfirmPassword)
    @Html.FormBlock(m => m.AreYouIn)
    @Html.FormBlock(m => m.YesOrNo)
    @Html.ActionBlock(Html.Submit(), Html.Reset<HomeController>(x => x.Index()))
}